<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta charset="utf-8">
		<title>AtlWeather</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <!--bower:css-->
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
        <!--endbower-->
        <!-- bower:js -->
        <script src="/lib/jquery/dist/jquery.js"></script>
        <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
        <!-- endbower -->
        <!-- inject:css-->
        <link rel="stylesheet" href="/css/styles.css">
        <!-- endinject-->
        <!--inject:js-->
        <script src="/js/app.js"></script>
        <!--endinject-->
		<!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>
	<body>  

<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body today">
          <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2"> 
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6">
             <table>
              <tr>   
              <td><h3> Today, <%- iconList[0].date.toString() %> </h3></td>
              </tr>
              <tr>        
                <td><h1><%= Math.round(weather.temp)%> &deg;</h4></td>
              <tr>
                <td><h4><%= Math.round(forecast[0].temp.min) %> &deg; - <%= Math.round(forecast[0].temp.max) %> &deg;</h4> </td>
              </tr>
            </table>     
          </div>
          <div class="col-sm-3 col-md-3 col-lg-3">
            <table class="text-align: center">
                <tr>
                  <td>
                    <img src="<%-'./img/' + iconList[0].art %>" alt=" <%- weather.description%>">
                  </td>
                </tr>
                <tr>
                  <td style="text-align: center">
                    <h3><%- forecast[0].weather[0].main%> </h3>
                  </td>
                  <td style="align: right">
                   
                  </td>
                </tr>
              </table>
              </div>
            </div>
            <div class="col-sm-11 col-md-11 col-lg-11"> 
            
          </div>
                      <div class="col-sm-1 col-md-1 col-lg-1"> 
            <button type="button" class="btn iconAlign top" data-toggle="collapse" data-target="<%-'#extra'+i%>">></button> 
          </div>                        
          </div>           
          <div class="row collapse panel-body notToday" id="<%-'extra'+i%>">
           <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-6 col-md-6 col-lg-6">
             <table>
              <th><h3>Today, <%-iconList[0].date%></h3></th>
              <tr>
                <td>
                  <h3> Currently: <%= Math.round(weather.temp) %> &deg;</h3>
                  
                </td>
              </tr>              
              <tr>
                <td>
                  <h3> <%= Math.round(forecast[0].temp.max) %> &deg;</h3>
                  <h4> <%= Math.round(forecast[0].temp.min) %> &deg;</h4>  
                </td>
              </tr>
              <tr>
                <td><h4>Humidity: <%= forecast[0].humidity %> %</h4> </td>
              </tr>
              <tr>
                <td><h4>Pressure: <%= Math.round(forecast[0].pressure)%> hPa</h4> </td>
              </tr>
              <tr>
                <td><h4>Wind: <%= Math.round(forecast[0].speed) %> km/H <%= iconList[0].direction %></h4> </td>
              </tr>
            </table>     
          </div>
          <div class="col-sm-4 col-md-4 col-lg-4">
            <table class="text-align: center">
                <tr>
                  <td>
                    <img src="<%-'./img/' + iconList[0].art %>" alt=" <%- weather.description%>">
                  </td>
                </tr>
                <tr>
                  <td style="text-align: center" >
                    <h4><%- forecast[0].weather[0].main%></h4>
                  </td>
                </tr>
              </table>
              </div>                        
          </div>
          <% for(var i=1; i<forecast.length;i++){%>
          <div class="row">
            <div class="col-sm-2">
            <table class="">
              <tr>
                <td>
                  <img src="<%-'./img/' + iconList[i].greyart %>" alt=" <%- forecast[i].weather.description%>">
                </td>
              </tr>
             </table>
            </div>
            <div class="col-sm-7">
             <% if(i == 1){ %> <h3>Tomorrow</h3> <% }else{ %> <h3><%- iconList[i].day%></h3> <% } %>
             <h4> <%= forecast[i].weather[0].main %> </h4>             
            </div>
            <div class="col-sm-2">
              <h3> <%= Math.round(forecast[i].temp.max) %> &deg;</h3>
              <h4> <%= Math.round(forecast[i].temp.min) %> &deg;</h4>              
            </div>
            <div class="col-sm-1">
              <button type="button" class="btn iconAlign" data-toggle="collapse" data-target="<%-'#extra'+i%>">></button>
            </div>          
          </div>
          <div class="row collapse panel-body notToday" id="<%-'extra'+i%>">
           <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-6 col-md-6 col-lg-6">
             <table>
             <th> <% if(i == 1){ %> <h3>Tomorrow, <%-iconList[i].date%></h3> <% }else{ %> <h3><%- iconList[i].day%>, <%-iconList[i].date%></h3> <% } %></th>              
              <tr>
                <td><h3> <%= Math.round(forecast[i].temp.max) %> &deg;</h3>
              <h4> <%= Math.round(forecast[i].temp.min) %> &deg;</h4>  </td>
              </tr>
              <tr>
                <td><h4>Humidity: <%= forecast[i].humidity %> %</h4> </td>
              </tr>
              <tr>
                <td><h4>Pressure: <%= Math.round(forecast[i].pressure)%> hPa</h4> </td>
              </tr>
              <tr>
                <td><h4>Wind: <%= Math.round(forecast[i].speed) %> km/H <%= iconList[i].direction %></h4> </td>
              </tr>
            </table>     
          </div>
          <div class="col-sm-4 col-md-4 col-lg-4">
            <table class="text-align: center">
                <tr>
                  <td>
                    <img src="<%-'./img/' + iconList[i].art %>" alt=" <%- weather.description%>">
                  </td>
                </tr>
                <tr>
                  <td style="text-align: center" >
                    <h4><%- forecast[i].weather[0].main%></h4>
                  </td>
                </tr>
              </table>
              </div>
          </div>
            <%}%>          
            </div>
          </div>                                        
        </div>
      </div>
    </div>
	</body>
</html>
